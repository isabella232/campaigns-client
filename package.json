{
  "name": "@sourcegraph/campaigns-client",
  "description": "API client for Sourcegraph campaigns",
  "version": "0.0.0-DEVELOPMENT",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/campaigns-client.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "graphql": "get-graphql-schema https://sourcegraph.com/.api/graphql --json | gql2ts -o src/types/sourcegraph.graphql.d.ts",
    "json-schema": "for url in \"https://raw.githubusercontent.com/sourcegraph/sourcegraph/main/schema/campaign_spec.schema.json\" \"https://raw.githubusercontent.com/sourcegraph/sourcegraph/main/schema/changeset_spec.schema.json\"; do curl -sS $url | json2ts --output src/types/$(basename $url | sed 's/.json//').ts; done",
    "codegen": "yarn -s run graphql && yarn -s run json-schema",
    "test": "nyc mocha",
    "semantic-release": "semantic-release",
    "prettier": "prettier '**/*.{js?(on),ts?(x),scss,md,yml}' --write --list-different",
    "prettier-check": "npm run prettier -- --write=false",
    "eslint": "eslint './src/*.ts?(x)' './*.ts?(x)'",
    "build": "tsc -p .",
    "watch": "tsc -p . -w"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts?(x)"
    ],
    "exclude": [
      "**/*.test.ts?(x)"
    ],
    "extension": [
      ".tsx",
      ".ts"
    ]
  },
  "mocha": {
    "require": "ts-node/register",
    "spec": "src/**/*.test.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@sourcegraph/eslint-config": "^0.16.0",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@sourcegraph/tsconfig": "^4.0.1",
    "@types/diff": "^4.0.2",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jszip": "^3.1.7",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.0",
    "eslint": "^6.8.0",
    "get-graphql-schema": "^2.1.2",
    "gql2ts": "^1.10.1",
    "husky": "^4.2.5",
    "isomorphic-fetch": "^2.2.1",
    "json-schema-to-typescript": "^9.1.1",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "semantic-release": "^17.0.6",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "diff": "^4.0.2",
    "jszip": "^3.3.0"
  }
}
