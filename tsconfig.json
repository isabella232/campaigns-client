{
  "extends": "@sourcegraph/tsconfig",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ES2019", "DOM", "WebWorker.ImportScripts"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["examples", "dist"],
}
